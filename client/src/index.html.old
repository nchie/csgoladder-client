<!doctype html>
<html ng-app="clientApp">
  <head>
    <meta charset="utf-8">
    <title ng-bind="page.title"></title>
    <base href="/">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- build:css(.) styles/vendor.css -->
    <!-- bower:css -->
    <!-- endbower -->
    <!-- endbuild -->
    <!-- build:css(.tmp) styles/main.css -->
    <link rel="stylesheet" href="styles/main.css">
    <!-- endbuild -->
  </head>
  <body ng-controller="MainCtrl as mainVm">
    <!--[if lte IE 8]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="row">
      <div class="small-12 columns">
        <div>
          <top-bar>
            <ul class="title-area">
              <li class="name">
                <h1><a ui-sref="home">PLACEHOLDER</a></h1>
              </li>
              <li toggle-top-bar="" class="menu-icon"><a href="#">Menu</a></li>
            </ul>
            <top-bar-section>
              <ul class="left">
                <div ng-if="!!mainVm.session.user">
                  <li has-dropdown><a href="">Play</a>
                    <ul top-bar-dropdown="" class="dropdown">
                      <li><a topbar-entry="">Quickmatch</a></li>
                      <li><a topbar-entry="" ui-sref="lobbies">Find a scrim</a></li>
                    </ul>
                  </li>
                  <li><a topbar-entry="" ui-sref="ladders">Ladder</a></li>
                  <li active-tab="/forums"><a topbar-entry="" ui-sref="forums">Forums</a></li>
                  <li has-dropdown><a topbar-entry="" ui-sref="support">Support</a>
                    <ul top-bar-dropdown="" class="dropdown">
                      <li></li>
                      <li><a href="#">Rules</a></li>
                      <li><a href="#">Tickets</a></li>
                    </ul>
                  </li>
                </div>
              </ul>
              <ul class="right" ng-switch="!!mainVm.session.user">
                <div ng-switch-when="false">
                  <li>
                    <a href="/auth/steam" id="steam-login" target="_self">
                      <img src="http://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_small.png">
                    </a>
                  </li>
                </div>
                <div ng-switch-when="true">
                  <li class="has-form hide-for-small">
                    <div class="row collapse">
                      <div class="medium-8 columns">
                        <user-search></user-search>
                      </div>
                      <div class="medium-4 columns"><a class="button tiny search"><i class="fa fa-search"> </i></a></div>
                    </div>
                  </li>
                  <li has-dropdown class="topuser-button"><a ui-sref="profile({id : null})"><span class="topuser-name" ng-bind="mainVm.session.user.displayName"></span><img ng-src="{{mainVm.session.user.avatarSmall}}"></a>
                    <ul top-bar-dropdown="" class="dropdown">
                      <li>
                        <a topbar-entry="" ui-sref="profile({id : null})">Profile</a>
                      </li>
                      <li ng-if="!!mainVm.session.user.team_id">
                        <a topbar-entry="" ui-sref="team({id : mainVm.session.user.Team.id})">Team</a>
                      </li>
                      <li>
                        <a topbar-entry="" ui-sref="settings">Settings</a>
                      </li>
                      <li>
                        <a href="#" logout="">Logout </a>
                      </li>
                    </ul>
                  </li>
                </div>
              </ul>
            </top-bar-section>
          </top-bar>
        </div>
      </div>
      <div class="large-12 columns">
        <div ng-if="!page.loading" ui-view></div>
        <div ng-if="page.loading">
          <div ng-include="'app/common/templates/loading-large.html'"></div>
        </div>
      </div>
      <div class="large-12 columns">
        <footer>
          <hr>
          <div class="row">
            <div class="large-6 columns">
              <p>Â© Blabla</p>
            </div>
            <div class="large-6 columns">
              <ul class="inline-list right">
                <li><a href="http://steampowered.com/">Powered by Steam</a></li>
                <li><a href="#">Link 2</a></li>
                <li><a href="#">Link 3</a></li>
                <li><a href="#">Link 4</a></li>
              </ul>
            </div>
          </div>
        </footer>
      </div>
    </div>




